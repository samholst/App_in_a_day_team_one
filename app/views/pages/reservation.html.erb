<%= form_for(@reservation_detail) do |f| %>


  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: "Reason for meeting" %>
  </div>

 <div class="form-group">
    <%= f.text_area :body, class: 'form-control', rows: 20, placeholder: "Description" %>
  </div>

 <div class="form-group">
    <%= f.submit "Reserve", class: 'btn btn-primary' %>
  </div>
<% end %>
